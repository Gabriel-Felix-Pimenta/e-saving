<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-Saving @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/e_saving.styles.css" asp-append-version="true" />
</head>
<body>

    <h1>
        <a asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/images/logo_color.png" alt="Logo" border="0" id="main-logo">
        </a>
    </h1>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div>
            &copy; 2024 - e_saving - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>